<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/list_view_action_bar_layout">

	<Spinner
	    android:id="@+id/list_view_action_bar_operation_spinner"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true" />
	
	<SearchView
	    android:id="@+id/list_view_action_bar_etSearch"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/list_view_action_bar_operation_spinner"
	    android:layout_alignParentRight="true" />
	
</RelativeLayout>